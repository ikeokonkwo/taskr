

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-sigin'}) do |f| %>

<h2 class = 'text-center'>Log in</h2>
  
    <%= f.input :email,
                required: false,
                autofocus: true, label: false, placeholder: "Enter Email Here", 
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false, label: false, placeholder: "Enter Password Here",
                input_html: { autocomplete: "current-password" } %>
    
  

  
    <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block '%>
  </div>
<% end %>

